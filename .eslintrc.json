{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
        "rhy-game.js",
        "rhy-game.min.js",
        "rhy-game.d.ts"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/explicit-member-accessibility": "error",
        "@typescript-eslint/no-empty-function": "warn",
        "accessor-pairs": "error",
        "block-spacing": "error",
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "camelcase": "error",
        "comma-dangle": "error",
        "comma-spacing": "error",
        "curly": [
            "error",
            "multi-line"
        ],
        "eqeqeq": "error",
        "func-call-spacing": "error",
        "handle-callback-err": "error",
        "indent": [
            "error",
            4
        ],
        "key-spacing": "error",
        "keyword-spacing": [
            "error",
            {
                "after": true
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "lines-between-class-members": [
            "error",
            "always",
            {
                "exceptAfterSingleLine": true
            }
        ],
        "new-cap": [
            "error",
            {
                "newIsCap": true,
                "capIsNew": true
            }
        ],
        "no-array-constructor": "error",
        "no-multi-spaces": "error",
        "no-new-object": "error",
        "no-new-require": "error",
        "no-tabs": "error",
        "no-throw-literal": "error",
        "no-trailing-spaces": "error",
        "no-undef": "error",
        "no-unexpected-multiline": "error",
        "no-unneeded-ternary": "error",
        "no-unreachable": "error",
        "no-unsafe-negation": "error",
        "no-unused-vars": [
            "warn",
            {
                "args": "none"
            }
        ],
        "no-with": "error",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "rest-spread-spacing": "error",
        "semi": [
            "error",
            "never"
        ],
        "semi-spacing": "error",
        "space-before-blocks": "error",
        "space-in-parens": "error",
        "space-infix-ops": "error",
        "spaced-comment": "error",
        "use-isnan": "error",
        "valid-typeof": "error",
        "yoda": "error"
    }
}